/* pages/notOrdered/orderList/orderList.wxss */

page {
  background-color: rgb(245, 245, 245);
}

.swiper-tab {
  width: 100%;
  border-bottom: 0.5px solid #eee;
  text-align: center;
  line-height: 80rpx;
  background-color: rgb(255, 255, 255);
}

.items {
  background-color: rgb(255, 255, 255);
}

.swiper-tab-list {
  display: inline-block;
  width: 50%;
  font-size: 36rpx;
  color: rgb(0, 0, 0);
}

.on {
  color: rgb(1, 210, 158);
  /* border-bottom: 5rpx solid #0c9; */
}

.on1 {
  border-bottom: 5rpx solid #0c9;
  width: 8%;
  margin-left: 20%;
}

.on2 {
  border-bottom: 5rpx solid #0c9;
  width: 8%;
  margin-right: 20%;
  float: right;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.page-head-line {
  width: 100%;
  height: 1rpx;
  margin-top: 0px;
  border-bottom: 0.1px solid rgb(245, 245, 245);
  text-align: right;
  margin-left: 18%;
}

.order_image {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  margin-bottom: -8px;
}

.name_text {
  display: inline-block;
  font-size: 32rpx;
  margin: 40rpx 33rpx 40rpx 33rpx;
}

.no_order_text {
  display: inline-block;
  color: rgb(224, 67, 54);
  text-align: right;
  font-size: 32rpx;
  width: 50%;
}

.order_text {
  display: inline-block;
  color: #0c9;
  text-align: right;
  font-size: 32rpx;
  width: 50%;
}

.into {
  display: inline-block;
  text-align: right;
  margin-left: 20rpx;
  width: 18rpx;
  height: 26rpx;
  margin-bottom: -1px;
}
