/* pages/ordered/publish/publish.wxss */
@import "/pages/common/lib/weui.wxss";

page {
  display: block;
  min-height: 100%;
}

.container {
  padding: 0rpx 0;
  border-top: 0.5px solid #eeeeee;
}
textarea {
  width: 94%;
  margin: 25rpx;
}
.form {
  align-items: center;
}

.multimedia {
  width: 100%;
}

.images {
  display: inline-block;
  width: 30%;
  height: 100px;
  margin: 0px 0px 7px 7px;
}

.add_iamge {
  display: inline-block;
  /* //width: 30%; */
  height: 79px;
  width: 79px;
  margin: 0px 0px 10px 25rpx;
}
.add_iamge1 {
  display: inline-block;
  margin: 0px 0px 8px 20rpx;
}
.add_video {
  display: inline-block;
  height: 79px;
  width: 79px;
  margin: 0px 0px 8px 16rpx;
}

.add_more {
  display: inline-block;
  height: 79px;
  width: 79px;
  margin: 0px 0px 8px 25rpx;
}

.bottom_view {
  width: 100%;
  height: 55px;
  position: fixed;
  bottom: 0;
  background: white;
}

.bottom1 {
  height: 50px;
  margin-top: 10px;
}

.action_button {
  width: 100%;
  height: 55px;
  color: white;
  background-color: rgb(0, 204, 153);
  display: inline-block;
  text-align: center;
  line-height:55px;
  font-size: 38rpx;
}

.gray_button {
  width: 100%;
  height: 55px;
  color: rgb(187, 187, 187);
  background-color: rgb(240, 240, 240);
  display: inline-block;
  text-align: center;
  line-height:55px;
  font-size: 38rpx;
}

/*画廊*/

.gallery {
  /*margin-bottom: 100rpx;*/
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

/*每张图片所占容器*/

.item {
  position: relative;
  margin: 5px;
  width: 30%;
}

/*删除按钮*/

.delete {
  position: absolute;
  height: 20px;
  bottom: 0;
  width: 30%;
  background: #ccc;
  opacity: 0.8;
}

.delete image {
  position: absolute;
  width: 20px;
  height: 20px;
}
